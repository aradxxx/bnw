<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardBackgroundColor="?attr/cardColor"
    app:cardCornerRadius="0dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/replyTo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/barColor">

            <ImageView
                android:id="@+id/replyToIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_reply"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/replyToUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-2dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@id/replyToClose"
                android:layout_toEndOf="@id/replyToIcon"
                android:ellipsize="end"
                android:gravity="bottom"
                android:lines="1"
                android:singleLine="true"
                android:textAppearance="@style/Text.Body1.Secondary"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_at"
                app:drawableTint="?android:textColorSecondary"
                tools:text="anonymous" />

            <TextView
                android:id="@+id/replyToText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="6dp"
                android:layout_toStartOf="@id/replyToClose"
                android:layout_toEndOf="@id/replyToIcon"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:textAppearance="@style/Text.Body1.Secondary"
                android:textSize="12sp"
                tools:text="anonymous" />

            <ImageView
                android:id="@+id/replyToClose"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:src="@drawable/ic_close"
                app:tint="@color/colorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:alpha="0.1"
                android:background="@color/colorDisabled" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/anon"
                android:layout_width="48dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:src="@drawable/ic_anon"
                app:tint="@color/primary_icon_color" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/replyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:background="@null"
                android:gravity="center|start"
                android:hint="@string/message"
                android:imeOptions="flagNoExtractUi"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:minHeight="56dp"
                android:padding="2dp"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/send"
                android:layout_width="48dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical|end"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:src="@drawable/ic_send"
                app:tint="@color/colorPrimary" />

            <ProgressBar
                android:id="@+id/sendProgress"
                android:layout_width="48dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="1dp" />
        </FrameLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>