<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/product_sans</item>
        <!-- Secondary brand color. -->
        <!--<item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>-->

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlHighlight">@color/colorRipple</item>

        <item name="cardColor">@color/white</item>
        <item name="barColor">@color/white</item>
        <item name="secondaryIconColor">@color/alpha_transparent</item>
        <item name="primaryIconColor">@color/black</item>
        <item name="chipBackgroundColor">@color/light_darker_background</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="ImageViewerDialog.Default" parent="android:Theme.Translucent.NoTitleBar"
        tools:ignore="UnusedResources">
        <item name="android:statusBarColor">@color/alpha_transparent</item>
        <item name="android:navigationBarColor">@color/alpha_transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="ShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text" />

    <style name="Text.Display4" tools:keep="@style/Text_Display4">
        <item name="android:textSize">112sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Text.Display3" tools:keep="@style/Text_Display3">
        <item name="android:textSize">56sp</item>
    </style>

    <style name="Text.Display2" tools:keep="@style/Text_Display2">
        <item name="android:textSize">45sp</item>
    </style>

    <style name="Text.Display1" tools:keep="@style/Text_Display1">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Text.Headline" tools:keep="@style/Text_Headline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Title" tools:keep="@style/Text_Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Subheading" tools:keep="@style/Text_Subheading">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Body2" tools:keep="@style/Text_Body2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Body1" tools:keep="@style/Text_Body1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Caption" tools:keep="@style/Text_Caption">
        <item name="android:textSize">12sp</item>
    </style>


    <!-- primary and secondary styles -->

    <style name="Text.Display4.Primary" parent="Text.Display4" tools:keep="@style/Text_Display4_Primary">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Display4.Secondary" parent="Text.Display4" tools:keep="@style/Text_Display4_Secondary">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Text.Display3.Primary" parent="Text.Display3" tools:keep="@style/Text_Display3_Primary">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Display3.Secondary" parent="Text.Display3" tools:keep="@style/Text_Display3_Secondary">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Text.Display2.Primary" parent="Text.Display2" tools:keep="@style/Text_Display2_Primary">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Display2.Secondary" parent="Text.Display2" tools:keep="@style/Text_Display2_Secondary">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Text.Display1.Primary" parent="Text.Display1" tools:keep="@style/Text_Display1_Primary">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Display1.Secondary" parent="Text.Display1" tools:keep="@style/Text_Display1_Secondary">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Text.Headline.Primary" parent="Text.Headline" tools:keep="@style/Text_Headline_Primary">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Headline.Secondary" parent="Text.Headline" tools:keep="@style/Text_Headline_Secondary">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Text.Title.Primary" parent="Text.Title" tools:keep="@style/Text_Title_Primary">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Title.Secondary" parent="Text.Title" tools:keep="@style/Text_Title_Secondary">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Text.Subheading.Primary" parent="Text.Subheading" tools:keep="@style/Text_Subheading_Primary">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Subheading.Secondary" parent="Text.Subheading" tools:keep="@style/Text_Subheading_Secondary">
        <item name="android:textColor">?android:textColorSecondary</item>
