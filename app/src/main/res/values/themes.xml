    <style name="Text.Body2.Primary" parent="Text.Body2" tools:keep="@style/Text_Body2_Primary">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Body2.Secondary" parent="Text.Body2" tools:keep="@style/Text_Body2_Secondary">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Text.Body1.Primary" parent="Text.Body1" tools:keep="@style/Text_Body1_Primary">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Body1.Secondary" parent="Text.Body1" tools:keep="@style/Text_Body1_Secondary">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Text.Body1.Important" parent="Text.Body1" tools:keep="@style/Text_Body1_Important">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Text.Caption.Primary" parent="Text.Caption" tools:keep="@style/Text_Caption_Primary">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Caption.Secondary" parent="Text.Caption" tools:keep="@style/Text_Caption_Secondary">
